<div id="start-screen">
	<div id="intro-0" class="intro"><%= t(:hello) %></div>
	<div id="intro-1" class="intro"><%= t(:i_am) %></div>
	<div id="logo" class="anim-svg">
		<%= render "logoAnim" %>
	</div>
	<div id="scr-continue">
		<%= t(:scroll_continue) %>
		<br>
		<%= image_tag("scrollArrow.svg") %>
	</div>
</div>

<div id="start-screen-extend">
</div>

<div id="navbar-main" role="navigation">
	<div id="menu-icon-container">
		<div id="menu-icon-bg">
		</div>
		<%= render "menuIcon" %>
	</div>
</div>

<div id="about" class="section">
	<h1><%= t(:about_me) %></h1>
	<% if I18n.locale != :zh %>
		<h2>关于我</h2>
	<% end %>
	<br>
	<%= render "aboutMe" %>
</div>

<div id="curriculum" class="section">
	<h1><%= t(:curriculum) %></h1>
	<% if I18n.locale != :zh %>
		<h2>个人简历</h2>
	<% end %>
	<br>
	<%= render "curriculum" %>
</div>

<div id="portfolio" class="section">
	<h1><%= t(:portfolio) %></h1>
	<% if I18n.locale != :zh %>
		<h2>作品集</h2>
	<% end %>
	<br>
	<%= render "portfolio" %>
</div>
